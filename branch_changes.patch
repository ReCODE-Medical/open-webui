+    f"{RECODE_KNOWLEDGE_PREFIX}{REC0DE_RELEASE_010_CARDIO_KNOWLEDGE_NAME.split('.')[0]}": [
+        "recode-cardio-openai",
+    ],
+    # f"{RECODE_KNOWLEDGE_PREFIX}{RECODE_RELEASE_000_EP_KNOWLEDGE_FILE.split('.')[0]}": [
